<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbg"
    tools:context=".MainActivity_Main">


    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8mdp"
        android:layout_marginTop="@dimen/_8mdp"
        android:layout_marginEnd="@dimen/_8mdp"
        android:layout_marginBottom="@dimen/_8mdp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/_4mdp"
            android:background="@drawable/edittextbg"
            android:hint="Search Image"
            android:padding="@dimen/_8mdp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_12font_mdp"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/search"
            android:layout_width="@dimen/_40mdp"
            android:layout_height="@dimen/_40mdp"
            android:layout_gravity="center"
            android:layout_marginStart="-50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_search_24"
            app:tint="@color/white" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchLayout"
        android:scrollbars="none"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/bottomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8mdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4mdp"
                    android:layout_marginEnd="@dimen/_4mdp"
                    android:gravity="center"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/nature"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40mdp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_marginStart="@dimen/_10mdp"
                        android:layout_marginTop="@dimen/_4mdp"
                        android:layout_marginEnd="@dimen/_10mdp"
                        android:layout_marginBottom="@dimen/_4mdp"
                        app:cardCornerRadius="10dp"

                        android:layout_weight="1"
                        android:focusable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradientnature"
                            android:gravity="end"
                            android:paddingTop="@dimen/_12mdp"
                            android:paddingEnd="@dimen/_15mdp"
                            android:text="Nature"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12font_mdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_40mdp"
                            android:layout_height="@dimen/_40mdp"
                            android:layout_marginStart="@dimen/_15mdp"
                            android:src="@drawable/nature" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/bus"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40mdp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_marginStart="@dimen/_10mdp"
                        android:layout_marginTop="@dimen/_4mdp"
                        android:layout_marginEnd="@dimen/_10mdp"
                        android:layout_marginBottom="@dimen/_4mdp"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradientbus"
                            android:gravity="end"
                            android:paddingTop="@dimen/_12mdp"
                            android:paddingEnd="@dimen/_15mdp"
                            android:text="Bus"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12font_mdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_40mdp"
                            android:layout_height="@dimen/_40mdp"
                            android:layout_marginStart="@dimen/_15mdp"
                            android:src="@drawable/bus" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4mdp"
                    android:layout_marginEnd="@dimen/_4mdp"
                    android:gravity="center"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/car"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40mdp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_marginStart="@dimen/_10mdp"
                        android:layout_marginTop="@dimen/_4mdp"
                        android:layout_marginEnd="@dimen/_10mdp"
                        android:layout_marginBottom="@dimen/_4mdp"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradientcar"
                            android:gravity="end"
                            android:paddingTop="@dimen/_12mdp"
                            android:paddingEnd="@dimen/_15mdp"
                            android:text="Car"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12font_mdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_40mdp"
                            android:layout_height="@dimen/_40mdp"
                            android:layout_marginStart="@dimen/_15mdp"
                            android:src="@drawable/car" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/train"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40mdp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_marginStart="@dimen/_10mdp"
                        android:layout_marginTop="@dimen/_4mdp"
                        android:layout_marginEnd="@dimen/_10mdp"
                        android:layout_marginBottom="@dimen/_4mdp"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradienttrain"
                            android:gravity="end"
                            android:paddingTop="@dimen/_12mdp"
                            android:paddingEnd="@dimen/_15mdp"
                            android:text="Train"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12font_mdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_40mdp"
                            android:layout_height="@dimen/_40mdp"
                            android:layout_marginStart="@dimen/_15mdp"
                            android:src="@drawable/train" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4mdp"
                    android:layout_marginEnd="@dimen/_4mdp"
                    android:gravity="center"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tranding"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40mdp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_marginStart="@dimen/_10mdp"
                        android:layout_marginTop="@dimen/_4mdp"
                        android:layout_marginEnd="@dimen/_10mdp"
                        android:layout_marginBottom="@dimen/_4mdp"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradienttrending"
                            android:gravity="end"
                            android:paddingTop="@dimen/_12mdp"
                            android:paddingEnd="@dimen/_15mdp"
                            android:text="Trending"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12font_mdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_40mdp"
                            android:layout_height="@dimen/_40mdp"
                            android:layout_marginStart="@dimen/_15mdp"
                            android:src="@drawable/trending" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/buss"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40mdp"
                        android:layout_marginStart="@dimen/_10mdp"
                        android:layout_marginTop="@dimen/_4mdp"
                        android:visibility="invisible"
                        android:clickable="false"
                        android:layout_marginEnd="@dimen/_10mdp"
                        android:layout_marginBottom="@dimen/_4mdp"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradientbus"
                            android:gravity="end"
                            android:paddingTop="@dimen/_12mdp"
                            android:paddingEnd="@dimen/_15mdp"
                            android:text="Bus"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12font_mdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_40mdp"
                            android:layout_height="@dimen/_40mdp"
                            android:layout_marginStart="@dimen/_15mdp"
                            android:src="@drawable/bus" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerView"
                android:padding="4dp"
                android:layout_below="@id/bottomLayout">


            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/mainProgressBar"
        android:visibility="gone"
        android:indeterminateTint="#F59300"/>

</RelativeLayout>